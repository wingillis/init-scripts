#!/bin/bash

verbose=""
node=""
x11=""
forward=""
login="login"
user="wg41"
port="8989"

if ! [ -z $ECOMMONS_ID ]; then
	user=$ECOMMONS_ID
	echo "using defined ecommons id"
fi
harvard="rc.hms.harvard.edu"
shell="zsh"
comm=""

while getopts 'n:xfu:s:vp:l:c:' flag; do
	case "${flag}" in
		n) node="${OPTARG}";;
		x) x11=true;;
		f) forward=true;;
		u) user="${OPTARG}";;
		s) shell="${OPTARG}";;
		v) verbose=true;;
		l) login="${OPTARG}";;
		p) port="${OPTARG}";;
		c) comm="${OPTARG}";;
		*) echo "fuck you asshole. Wrong arguments";;
	esac
done

cmd="ssh"

if [ $x11 ];
then
	cmd="${cmd} -XY"
fi

if [ $forward ];
then
	cmd="${cmd} -L ${port}:localhost:${port}"
fi

if [ $node ];
then
	login="${node}.o2"
fi

if [[ -z "$comm" ]]; then
	comm="${shell} -i"
fi

cmd="${cmd} ${user}@${login}.${harvard} -t '${comm}'"

if [ $verbose ]; then
	echo "${cmd}"
else
	eval "${cmd}"
fi
